{
  "name": "@lumina-study/services-status",
  "version": "1.1.0",
  "description": "Service health check monitoring for Lumina microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "pnpm exec tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "pnpm exec tsc --noEmit",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "release": "dotenv -- release-it",
    "release:minor": "dotenv -- release-it minor",
    "release:patch": "dotenv -- release-it patch",
    "release:major": "dotenv -- release-it major",
    "release:dry": "dotenv -- release-it --dry-run",
    "release:ci": "dotenv -- release-it --ci",
    "ci:test": "pnpm run lint && pnpm run type-check && pnpm run test",
    "ci:build": "pnpm run clean && pnpm run build",
    "ci:release": "dotenv -- release-it --ci --no-git.requireCleanWorkingDir",
    "ci:release:patch": "dotenv -- release-it patch --ci --no-git.requireCleanWorkingDir",
    "ci:release:minor": "dotenv -- release-it minor --ci --no-git.requireCleanWorkingDir",
    "ci:release:major": "dotenv -- release-it major --ci --no-git.requireCleanWorkingDir",
    "ci:publish": "dotenv -- npm publish --access public",
    "ci:publish:dry": "dotenv -- npm publish --access public --dry-run"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "health-check",
    "monitoring",
    "microservices",
    "status"
  ],
  "author": "Lumina Study",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luminastudy/service-status.git"
  },
  "bugs": {
    "url": "https://github.com/luminastudy/service-status/issues"
  },
  "homepage": "https://github.com/luminastudy/service-status#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^22.10.7",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-agent": "^1.6.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "release-it": "^19.0.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
